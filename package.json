{
  "name": "json-table-viewer",
  "displayName": "JSON Table Viewer",
  "description": "Preview JSON files as an interactive table.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-table-viewer.showPreview",
        "title": "Preview JSON as Table",
        "icon": "$(table)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == json",
          "command": "json-table-viewer.showPreview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.83.0",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  }
}
